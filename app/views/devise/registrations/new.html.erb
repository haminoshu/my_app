<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to image_tag("rakuraku.png", class: :logo), root_path %>
            <%= image_tag "logoimage.png", class: :logoimage %>
          </div>
          <%# ログインしているときは以下を表示するようにしましょう %>
            <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to image_tag("logout.png", class: :semilogo), destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to image_tag("job.png", class: :semilogo), new_avatar_path, class: :nav__btn %>
            </div>
          <%# // ログインしているときは上記を表示するようにしましょう %>
          <%# ログインしていないときは以下を表示するようにしましょう %>
            <% else %>
            <div class="nav__right">
              <%= link_to image_tag("login.png", class: :semilogo), new_user_session_path, class: :nav__btn %>
              <%= link_to image_tag("new.png", class: :semilogo), new_user_registration_path, class: :nav__btn %>
            </div>
            <% end %>
          <%# // ログインしていないときは上記を表示するようにしましょう %>
        </div>
      </div>
    </header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>（最大<%= @minimum_password_length %> 文字まで）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"苗字" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :"名前" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label :"苗字（カナ）" %><br />
    <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "last_name_ruby" %>
  </div>

  <div class="field">
    <%= f.label :"名前（カナ）" %><br />
    <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "first_name_ruby" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>